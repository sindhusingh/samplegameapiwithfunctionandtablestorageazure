{
  "name": "samplegameapiwithfunctionandtablestorageazure",
  "version": "1.0.0",
  "description": "Azure Functions for Unity game backend",
  "main": "dist/src/functions/*.js",
  "scripts": {
    "build": "tsc",
    "start": "concurrently \"npm run watch\" \"func start\"",
    "watch": "tsc --watch",
    "dev": "npm run start",
    "clean": "rimraf dist",
    "prestart": "npm run clean && npm run build",
    "test": "echo \"No tests yet...\"",
    "pretty": "prettier --write --tab-width 4 \"src/**/*.{ts,js}\""
  },
  "dependencies": {
    "@azure/data-tables": "^13.3.1",
    "@azure/functions": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "azure-functions-core-tools": "^4.x",
    "concurrently": "^9.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "typescript": "^4.0.0"
  }
}
